<div class="topic-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <%= form_for @comment do |f| %>
        <div class="form-group">
          <%= f.hidden_field :user_id, value: @comment.user_id %>
          <%= f.hidden_field :topic_id, value: @comment.topic_id %>
          <%= f.label :"コメント" %>
          <%= f.text_field :content, class: 'form-control' %>
        </div>
        <%= f.hidden_field :topic_id, :value => @comment.topic_id %>
        <%= f.submit :"投稿", class:"btn btn-block btn-black" %>
        <% end %>
      </div>
    </div>
  </div>
</div>